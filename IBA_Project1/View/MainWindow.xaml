<Window x:Class="IBA_Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBA_Project1.View"
        
        mc:Ignorable="d" FontFamily="Segoe UI Light"
        Title="Project manager" Height="450" Width="800">
    <Grid>
        
        <TabControl x:Name="Manager">
            <TabItem x:Name="projectsTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Projects</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <local:UserController></local:UserController>
            </TabItem>
            <TabItem x:Name="tabletsTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Objectives</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <local:UserController></local:UserController>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
